# Application URL (optional override - if not set, will be built from TEST_ENV + ENV_PREFIX)
# BASE_URL=https://qa2repohighway.devservices.dh.com/go.aspx

# Browser Settings
HEADLESS=true

# Test Environment (QA, dev, prod, local)
TEST_ENV=QA

# Environment Prefix (for QA instances: qa1, qa2, qa3, etc.; for dev: dev; for prod: prod)
# Used to build dynamic URLs: https://{ENV_PREFIX}{SUBDOMAIN}.{domain}
ENV_PREFIX=qa2

# Subdomain (optional override - defaults to value in test.config.ts)
# Used to build dynamic URLs: https://{ENV_PREFIX}{SUBDOMAIN}.{domain}
# SUBDOMAIN=repohighway

# ============================================================
# AUTHENTICATION CREDENTIALS
# ============================================================

# Auth Credential Key (which credential set to use from test.config.ts)
# Specifies which credential set to use from test.config.ts
# Options: RBCClient, TDFClient, testUser2, readOnlyUser
# Default: RBCClient
# AUTH_CREDENTIAL_KEY=RBCClient

# Credentials are automatically fetched by globalSetup and stored in:
# - LOGIN_USERNAME (automatically set from test.config.ts)
# - LOGIN_PASSWORD (automatically set from test.config.ts)
# - CREDENTIAL_KEY (automatically set to the key used)
# Tests can access these via process.env.LOGIN_USERNAME and process.env.LOGIN_PASSWORD

# Legacy credentials (for backward compatibility - prefer AUTH_CREDENTIAL_KEY)
TEST_USERNAME=testuser@example.com
TEST_PASSWORD=SecurePassword123!

# API Configuration
API_BASE_URL=https://api.example.com
API_KEY=your_api_key_here

# Timeouts (milliseconds)
ACTION_TIMEOUT=15000
NAVIGATION_TIMEOUT=30000

# Parallel Execution
WORKERS=4

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Reporting
ALLURE_RESULTS_PATH=allure-results
